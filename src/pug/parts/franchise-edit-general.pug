	.col.col--6-of-12.col--s-12-of-12.col--m-6-of-12.col--l-6-of-12
		.form__field
			label.label Преимущество №1
			input(type="text", name="advantage_1").input
	.col.col--6-of-12.col--s-12-of-12.col--m-6-of-12.col--l-6-of-12
